{
  "name": "robinn/phpmdocs",
  "description": "Simple but powerful Markdown documentation.",
  "license": "MIT",
  "type": "project",
  "keywords": [
    "markdown",
    "twig",
    "php",
    "bootstrap"
  ],
  "authors": [
    {
      "name": "Róbert Kelčák",
      "email": "robo@kelcak.com",
      "homepage": "https://kelcak.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-dom": "*",
    "ext-json": "*",
    "erusev/parsedown": "^1.7",
    "robinn/cache": "^2.3",
    "samdark/sitemap": "^2.4",
    "twig/twig": "^3.4"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8"
  },
  "suggest": {
    "ext-iconv": "Optional for createIdFromTitle() method."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "RobiNN\\Pmd\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "phpstan --ansi",
    "sitemap": "php bin/sitemap"
  }
}
